<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.annaru.upms.mapper.DoctorInfoMapper">

	<!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.annaru.upms.entity.DoctorInfo" >
        <result column="id" property="id" />
        <result column="name" property="name" />
        <result column="picture" property="picture" />
        <result column="job_title" property="jobTitle" />
        <result column="create_user" property="createUser" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 多表页面信息查询分页 -->
    <select id="selectDataPage" parameterType="map" resultMap="BaseResultMap">

        SELECT
              id,
              name,
              picture,
              job_title,
              create_user,
              create_time,
              update_time
        FROM
            doctor_info
        <where>
            <if test="params.name != null and params.name != ''">
                name LIKE CONCAT('%', #{params.name}, '%')
            </if>
        </where>
        ORDER BY create_time DESC
    </select>

    <select id="selectDoctorInfoByName" resultMap="BaseResultMap">

        SELECT
            id,
            name,
            picture,
            job_title,
            create_user,
            create_time,
            update_time
        FROM
            doctor_info
        WHERE
            name = #{name}
    </select>

</mapper>