<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.annaru.upms.mapper.UserCardsMapper">
	<!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.annaru.upms.entity.UserCards" >
        <result column="sys_id" property="sysId" />
        <result column="user_id" property="userId" />
        <result column="card_cates" property="cardCates" />
        <result column="card_no" property="cardNo" />
        <result column="cellphone_no" property="cellphoneNo" />
        <result column="status" property="status" />
        <result column="remark" property="remark" />
        <result column="creation_time" property="creationTime" />
    </resultMap>

    <!-- 多表页面信息查询分页 -->
    <select id="selectDataPage" parameterType="map" resultMap="BaseResultMap">
        SELECT
              sys_id,
              user_id,
              card_cates,
              card_no,
              cellphone_no,
              status,
              remark,
              creation_time
        FROM
            user_cards
        <where>
            <if test="params.userId != null and params.userId != ''">
                AND user_id LIKE CONCAT('%', #{params.userId}, '%')
            </if>
        </where>
    </select>

    <!-- 通过已绑卡查询 -->

    <select id="selectByStatus" parameterType="map" resultMap="BaseResultMap">
        select
              user_id,
              cellphone_no,
              card_cates,
              card_no
        from user_cards where  user_id=#{userId}
    </select>

    <!-- 添加绑卡 -->
    <insert id="insertCardAndBaseAndInstitution" parameterType="com.annaru.upms.entity.UserCards">
    INSERT INTO
            user_cards (user_id,card_no,cellphone_no)
    VALUES
          (#{userId},#{cardNo},#{cellphoneNo})
    </insert>



</mapper>
